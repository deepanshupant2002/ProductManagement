@model Cart
@{
    ViewData["Title"] = "Cart";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div>
    <div class="d-flex justify-content-between">
        <h1 class="col-6">Shopping Cart</h1>
        @if (Model.Id > 0)
        {
            <a asp-action="Cart" asp-controller="Cart" class="btn btn-danger" style="margin-block:auto;">
                Clear Cart
            </a>
        }
    </div>
</div>

<form method="post">
    <br />
    @if (Model.Id > 0)
    {
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ms-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 d-flex flex-row-reverse">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm text-right">Continue Shopping</a>
                        </div>
                    </div>
                
                    <div class="card-body">
                            <div class="row">
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="https://images.unsplash.com/photo-1560343090-f0409e92791a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1064&q=80" class="rounded" width="100%" />
                                </div>
                                <div class="col-12 text-sm-center col-lg-3 text-lg-left">
                                    <h5><strong>@Model.Name</strong></h5>
                                </div>
                                <div class="col-12 text-sm-center col-lg-4 text-lg-left">
                                    <p><small>@Model.Description</small></p>
                                </div>
                                <div class="col-12 text-sm-center col-lg-4 text-lg-right row">
                                    <div class="col-4 text-md-right" style="padding-top:5px;">
                                        <h6><strong>$@Model.Price<span class="text-muted">x</span> @Model.Quantity </strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-6">
                                        <div class="float-right mx-1">
                                            <a asp-action="Plus" asp-route-Id="@Model.Id" asp-route-quan="@Model.Quantity" asp-controller="Cart" class="btn btn-primary">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                        <div class="float-right mx-1">
                                        <a asp-action="Minus" asp-route-Id="@Model.Id" asp-route-quan="@Model.Quantity" asp-controller="Cart" class="btn btn-danger">
                                                <i class="fa fa-minus"></i>
                                                </a>
                                        </div>
                                    </div>
                                    <div class="col-2 col-sm-4 col-lg-2 text-right">
                                        <a asp-action="Cart" asp-controller="Cart" class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                            </a>
                                    </div>
                                </div>
                            </div>
                            <hr />

                            <div class="row">
                                <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                    <ul class="list-group">
                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <span class="text-info"> Total (USD)</span>
                                        @{var tot = Model.Price * Model.Quantity;}
                                            <strong class="text-info">$ <span id="txtOrderTotal">@tot</span></strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                    </div>
                
                </div>
            </div>
        </div>
    }
    else
    {
        <div>There are no items in the shopping cart.</div>
    }
</form>


